# VERS: 0.0.1
FROM debian:9

RUN apt-get update \
    && apt-get install -y wget gnupg \
    && wget -O - https://apt.llvm.org/llvm-snapshot.gpg.key|apt-key add - \
    && apt-get install -y software-properties-common \
    && apt-add-repository "deb http://apt.llvm.org/stretch/ llvm-toolchain-stretch-6.0 main" \
    && apt-get install -y \
    ssh \
    ca-certificates \
    git \
    autoconf \
    automake \
    libtool \
    curl \
    make \
    g++ \
    unzip \
    build-essential \
    pkg-config \
    clang-6.0 \
    lldb-6.0 \
    lld-6.0
RUN curl -OL https://github.com/protocolbuffers/protobuf/releases/download/v3.6.1/protobuf-cpp-3.6.1.tar.gz \
    && tar -xzf protobuf-cpp-3.6.1.tar.gz --no-same-owner \
    && cd protobuf-3.6.1 \
    && ./configure \
    && make \
    && make check \
    && make install \
    && ldconfig \
    && git clone -b $(curl -L https://grpc.io/release) https://github.com/grpc/grpc \
    && cd grpc \
    && git submodule update --init \
    && make \
    && make install

CMD [ "/bin/bash" ]